
@{
    ViewData["Title"] = "Home Page";
}

<h3>Recently Added</h3>
<div class="container">

    @{ foreach (var fiction in Model.Fictions)
        {
            <div>
                <h2>
                    <a asp-action="Fiction" asp-controller="Fictions" asp-route-id="@fiction.Id">
                        @fiction.Name
                    </a>
                    - @fiction.Rating
                </h2>
                <p>@fiction.Genre</p>
            </div> } }
</div>

